<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onlineRecipeListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/verticalOnlineRecipeListItemElements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preparationStepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/prompt_recipe_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preparationStepDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="1dp"
            android:text="@string/prompt_recipe_type" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/recipe_check"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".8"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:textStyle="bold" />
</LinearLayout>
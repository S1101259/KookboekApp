<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".standaloneFragments.StatisticsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/StatsCountAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/placeholder_count_vistited_recipes"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StatsCountAllValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/StatsCountAll"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginHorizontal="@dimen/text_margin"
            android:layout_marginTop="30dp"
            android:text="" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="345dp"
            android:layout_height="447dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="67dp" />
    </RelativeLayout>

</FrameLayout>